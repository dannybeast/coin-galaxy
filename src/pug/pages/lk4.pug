extends ../layout/main

block variables
    - var title = 'COINGALAXY';
    - var description = 'Coingalaxy - Lk6';
    - var pageClass = 'lk6';
block styles
    link(rel="stylesheet" href="assets/css/lk.css")
block content
    include ../includes/modules/header-lk
    +header-lk()

    +b.SECTION.l-section
        .container
            +b.b-top
                +e.H1.title Referral Program
            +b.l-form
                +e.H3.title Your referral link
                +e.desc
                    p Do NOT register another account using your own referral link. This will lead to a loss of both accounts with all the funds, according to the User agreement. If you need a second account, contact support via tickets and explain, why do you need one. Usually we do allow multiple accounts in case you have reasonable grounds.
                form
                    +b.field(class="--row")
                        label Phone
                        input(type="text")
                    +btn('COPY', '--warning')
    
    +b.SECTION.l-section
        .container
            +b.b-top
                +e.H1.title Referrals list
                +b.filter
                    +b.LABEL.radio-button
                        input(type="radio", name="trading-filter", value="BTC")
                        span BTC
                    +b.LABEL.radio-button
                        input(type="radio", name="trading-filter", value="USD")
                        span USD
                    +b.LABEL.radio-button
                        input(type="radio", name="trading-filter", value="ALL", checked)
                        span ALL
            .datatable-module
                table.table.js-datatable.responsive
                    thead
                        tr
                            th 
                                span Time
                            th 
                                span Type
                            th 
                                span Pair
                            th 
                                span Amount
                            th 
                                span Price
                            th 
                                span Value
                            th 
                                span Status
                    tbody
                        mixin tr2()
                            tr
                                td 01/11/2019
                                td Type
                                td USD/BTC
                                td 121.32 USD
                                td 121.32 USD
                                td 121.32 USD
                                td
                                    +b.status(class="--green") Approved
                            tr
                                td 01/11/2019
                                td Type
                                td USD/BTC
                                td 121.32 USD
                                td 121.32 USD
                                td 121.32 USD
                                td
                                    +b.status(class="--red") Delay
                            
                           
                        +tr2()
                        +tr2()
                        +tr2()
                        +tr2()
                        +tr2()
                        +tr2()
                        +tr2()
                        +tr2()
                        +tr2()
                        +tr2()
                        +tr2()
                        +tr2()
    
    
    
block script
    script(src="assets/js/vendors.js")
    script(src="assets/js/lk.js")