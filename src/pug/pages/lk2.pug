extends ../layout/main

block variables
    - var title = 'COINGALAXY';
    - var description = 'Coingalaxy - Lk2';
    - var pageClass = 'lk2';
    - var pageParent = 'lk2';
block styles
    link(rel="stylesheet" href="assets/css/lk.css")
block content
    include ../includes/modules/header-lk
    +header-lk()
    include ../includes/modules/trading-info

    +b.SECTION.l-section
        +b.container(class="--p-large")
            +b.b-top
                +e.H1.title Buy/sell
            .row
                .col-lg-6.col-md-6.col-sm-6.col-xs-12
                    +b.l-block
                        +b.FORM.buy-sell
                            +b.field
                                label You get
                                +e.prepend-group
                                    input(type="text")
                                    +b.prepend 
                                        span BTC
                            +b.field
                                label Price per BTC
                                +e.prepend-group
                                    input(type="text")
                                    +b.prepend.select-wrapper
                                        select
                                            option USD
                            +b.field
                                label You pay (inc. 0.18% fee)
                                +e.prepend-group
                                    input(type="text")
                                    +b.prepend
                                        span USD
                            +btn('Buy BTC', '--warning --color-dark --small')
                            +e.bottom
                                p
                                    strong You have: 0 USD
                                p.color-light Switch to market order
                .col-lg-6.col-md-6.col-sm-6.col-xs-12
                    +b.l-block
                        +b.FORM.buy-sell
                            +b.field
                                label You pay
                                +e.prepend-group
                                    input(type="text")
                                    +b.prepend 
                                        span BTC
                            +b.field
                                label Price per BTC
                                +e.prepend-group
                                    input(type="text")
                                    +b.prepend.select-wrapper
                                        select
                                            option USD
                            +b.field
                                label You pay (inc. 0.18% fee)
                                +e.prepend-group
                                    input(type="text")
                                    +b.prepend 
                                        span USD
                            +btn('Buy BTC', '--dark --small')
                            +e.bottom
                                p
                                    strong You have: 0 USD
                                p.color-light Switch to market order
    +b.SECTION.l-section
        .container.js-radio-tabs
            +b.b-top
                +e.H1.title OPERATIONS LIST
                +b.filter
                    +b.LABEL.radio-button
                        input(type="radio", name="pending-filter", value="BTC")
                        span BTC
                    +b.LABEL.radio-button
                        input(type="radio", name="pending-filter", value="USD")
                        span USD
                    +b.LABEL.radio-button
                        input(type="radio", name="pending-filter", value="ALL", checked)
                        span ALL
            +b.datatable-module(class="--lk")
                mixin operations-table()
                    table.table.js-datatable.responsive(data-page-size="8")
                        thead
                            tr
                                th 
                                    span Time
                                th 
                                    span Type
                                th 
                                    span Pair
                                th 
                                    span Amount
                                th 
                                    span Price
                                th 
                                    span Value
                                th 
                                    span Status
                        tbody
                            mixin tr2()
                                tr
                                    td 01/11/2019
                                    td Type
                                    td USD/BTC
                                    td 121.32 USD
                                    td 121.32 USD
                                    td 121.32 USD
                                    td
                                        +b.status(class="--green") Approved
                                tr
                                    td 01/11/2019
                                    td Type
                                    td USD/BTC
                                    td 121.32 USD
                                    td 121.32 USD
                                    td 121.32 USD
                                    td
                                        +b.status(class="--red") Delay

                            +tr2()
                            +tr2()
                            +tr2()
                            +tr2()
                            +tr2()
                            +tr2()
                            +tr2()
                            +tr2()
                            +tr2()
                            +tr2()
                            +tr2()
                            +tr2()
                // BTC
                div(data-tab-content="BTC")
                    +operations-table()
                // USD
                div(data-tab-content="USD")
                    +operations-table()
                // ALL
                div(data-tab-content="ALL")
                    +operations-table()
    +b.SECTION.l-section
        +b.container(class="--p-large")
            .row
                .col-lg-6.col-md-6.col-sm-12.col-xs-12
                    +b.b-top
                        +e.H1.title MARKET TRADE HISTORY
                    +b.l-block(class="--not-border")
                        table.table.table--small.js-datatable.responsive(sort="false")
                            thead
                                tr
                                    th 
                                        span Time
                                    th 
                                        span Type
                                    th 
                                        span Amount
                                    th 
                                        span Price
                                    th 
                                        span Value
                            tbody
                                mixin tr()
                                    tr
                                        td 
                                            +b.trade-status(class="--up") 
                                                span 30.10.2019 15:07
                                        td SELL
                                        td 0.0088148 BTC
                                        td 9 458.89998 USD
                                        td 83.37831 USD
                                    tr    
                                        td 
                                            +b.trade-status(class="--down") 
                                                span 30.10.2019 15:07
                                        td SELL
                                        td 0.0088148 BTC
                                        td 9 458.89998 USD
                                        td 83.37831 USD
                                +tr()
                                +tr()
                                +tr()
                                +tr()
                                +tr()
                                +tr()
                                +tr()
                .col-lg-6.col-md-6.col-sm-12.col-xs-12
                    +b.b-top
                        +e.H1.title MY TRADE HISTORY
                    +b.l-block(class="--not-border")
                        table.table.table--small.js-datatable.responsive(sort="false")
                            thead
                                tr
                                    th 
                                        span Time
                                    th 
                                        span Type
                                    th 
                                        span Amount
                                    th 
                                        span Price
                                    th 
                                        span Value
                            tbody
                                mixin tr()
                                    tr
                                        td 
                                            +b.trade-status(class="--up") 
                                                span 30.10.2019 15:07
                                        td SELL
                                        td 0.0088148 BTC
                                        td 9 458.89998 USD
                                        td 83.37831 USD
                                    tr    
                                        td 
                                            +b.trade-status(class="--down") 
                                                span 30.10.2019 15:07
                                        td SELL
                                        td 0.0088148 BTC
                                        td 9 458.89998 USD
                                        td 83.37831 USD
                                +tr()
                                +tr()
                                +tr()
                                +tr()
                                +tr()
                                +tr()
                                +tr()

block script
    script(src="assets/js/vendors.js")
    script(src="assets/js/lk.js")