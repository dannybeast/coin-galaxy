                                                span Volume (24h)
                                            th 
                                                span Last price
                                            th 
                                                span Change
                                    tbody
                                        mixin tr()
                                            tr
                                                td 
                                                    +b.pair(class="--small")
                                                        +e.icon
                                                            img(src="assets/images/currency/iex.png", alt="")
