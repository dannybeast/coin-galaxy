                                                td 0.02 BTC
                                                td 8 495.90899 USD
                                            
                                                td 
                                                    +b.status(class="--orange") -1.25%
                                            tr
                                                td 
                                                    +b.pair(class="--small")
                                                        +e.icon
                                                            img(src="assets/images/currency/btc1.png", alt="")
                                                        strong BTC/USD
                                                td 0.02 BTC
                                                td 8 495.90899 USD
                                            
                                                td 
                                                    +b.status(class="--green") +4.25%  
                                        +tr()
                                        +tr()
                                        +tr()
                                        +tr()
                                        +tr()
                                        +tr()
                                        +tr()
                                        +tr()
                        // Favorites
                        div(data-tab-content="Favorites")
                            +tab()
                        // BTC
                        div(data-tab-content="BTC")
                            +tab()
                        // ETH
                        div(data-tab-content="ETH")
                            +tab()
                        // LTC
                        div(data-tab-content="LTC")
                            +tab()
                        // USD
                        div(data-tab-content="USD")
                            +tab()
                        // RUR
                        div(data-tab-content="RUR")
                            +tab()
                    
                .col-lg-8.col-md-12.col-sm-12.col-xs-12
                    +b.graph
