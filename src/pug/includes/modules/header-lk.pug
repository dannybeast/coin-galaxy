
mixin header-left()
  +e.left
    +e.A(href="/" class="logo")
      img(src="assets/images/logo.png", alt="Coin Galaxy")
mixin header-right()
  +e.right
      +b.language
        +e.current
          img(src="assets/images/lang/en.png", alt="EN")
        +e.dropdown
          ul
            li
              a(href="#")
                img(src="https://picsum.photos/id/230/25/17", alt="EN")
            li
              a(href="#")
                img(src="https://picsum.photos/id/235/25/17", alt="EN")
            li
              a(href="#")
                img(src="https://picsum.photos/id/232/25/17", alt="EN")

      +e.buttons
        a.btn.btn--line-warning.btn--i-user(href='signup.html') 
            span Username
        +btn-link('login.html', 'Logout', '--line-white')

mixin header-lk()
    +b.top-bar
        .container
            +e.P.info 
                span USD Equivalent Balance: ~120.2 USD  
                a(href="#") (What is this?)
            +e.right
                +b.A(href="#").notification
                    +e.SPAN.count 10
                    +e.SPAN.name You have 10 notifications
                +b.A(href="#").icon-link(class="--deposit")
                    span Deposit
    +b.HEADER.header-lk
        .container
            +header-left()

            +e.center
                +b.NAV.nav-lk
                    ul
                        li(class=(pageParent === "lk1" ? " active" : undefined))
                            a(href="lk1.html") Account
                        li(class=(pageParent === "lk2" ? " active" : undefined))
                            a(href="lk2.html") BUY / SELL
                        li(class=(pageParent === "lk6" ? " active" : undefined))
                            a(href="lk3.html") BALANCE
                        li(class=(pageParent === "lk4" ? " active" : undefined))
                            a(href="#") THE GAME
                        li(class=(pageParent === "lk5" ? " active" : undefined))
                            a(href="lk9.html") Settings
                        li(class=(pageParent === "lk10" ? " active" : undefined))
                            a(href="lk10.html") HELP
                
            +header-right()