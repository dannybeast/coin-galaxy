
mixin header-left()
  +e.left
    +e.A(href="/" class="logo")
      img(src="assets/images/logo.png", alt="Coin Galaxy")
mixin header-right()
  +e.right
      +b.language
        +e.current
          img(src="assets/images/lang/en.png", alt="EN")
        +e.dropdown
          ul
            li
              a(href="#")
                img(src="https://picsum.photos/id/230/25/17", alt="EN")
            li
              a(href="#")
                img(src="https://picsum.photos/id/235/25/17", alt="EN")
            li
              a(href="#")
                img(src="https://picsum.photos/id/232/25/17", alt="EN")

      +e.buttons
        +btn-link('signup.html', 'Sign up', '--line-warning')
        +btn-link('login.html', 'Log in', '--line-white')

mixin header()
  +b.HEADER.header
    +header-left()

    +e.center
      +e.help-links
        ul
          li
            a(href="#") Live trading
          li
            a(href="#") Token listing
          li(class=(pageClass === "refferal" ? " active" : undefined))
            a(href="refferal.html") Refferal
        ul
          li
            a(href="#") Help
          li
            a(href="#") More

      include nav

    +header-right()